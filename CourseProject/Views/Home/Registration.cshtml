@using CourseProject.Resources
@model CourseProject.Models.RegistrationModel


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="items">
    <h4>@Language.Registration</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="mb-3">
    @Language.User_name:
    <div class="textbox">
        @Html.TextBoxFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
    </div>
</div>

    <div class="mb-3">
        @Html.LabelFor(model => model.EMail, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="textbox">
            @Html.TextBoxFor(model => model.EMail, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EMail, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3">
        @Language.Password:
        <div class="textbox">
            @Html.TextBoxFor(model => model.Password, new { htmlAttributes = new { @type = "password" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3">
        @Language.Password_confirmation
        <div class="textbox">
            @Html.TextBoxFor(model => model.PasswordConfirmation, new { htmlAttributes = new { @type = "password" } })
            @Html.ValidationMessageFor(model => model.PasswordConfirmation, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3">
        <div style="margin-top:10px">
            <input type="submit" value="@Language.Registration" class="btn btn-dark" formaction="Registration" formmethod="post" />
        </div>
    </div>
    <div>
        @Html.ActionLink(Language.Login, "Login")
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    .textbox {
        margin-top: 5px;
    }

    .mb-3{
        margin-bottom: 5px !important;
    }

</style>
