<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Users</title>
    <link href="@Url.Content("~/Content/site.css")" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

<div class="container" >
    <div class="row">

        <div class="col">
            @{ if (ViewBag.IsAdmin)
                {
                    <div>
                        @Html.ActionLink("List Of Users", "ListOfUsers", new { }, htmlAttributes: new { @class = "btn btn-primary mainbtn" })
                    </div>
                }
                if (ViewBag.IsNotGuest)
                {
                    <div>
                        @Html.ActionLink("Add Collection", "AddCollection",new { }, htmlAttributes: new { @class = "btn btn-primary mainbtn" })
                    </div>
                }
            }
            <div id="tags"  style="margin-bottom:10px; margin-top:20px">

            </div>
            <div id="collections" >

            </div>
        </div>
        <div class="col-10">
            <div id="items">

            </div>
        </div>
    </div>
</div>
    
</body>
</html>

@section Scripts {
    <script>
        $(document).ready(function () {
            var itemsurl = "@(Html.Raw(Url.Action("LastAddedItems","Home")))";
            $("#items").load(itemsurl)
            var tagsurl = "@(Html.Raw(Url.Action("TagCloud","Home" )))";
            $("#tags").load(tagsurl)
            var collectionsurl = "@(Html.Raw(Url.Action("BiggestCollections","Home")))";
            $("#collections").load(collectionsurl)
        });
    </script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
}

<style>
    .mainbtn {
        margin-top: 10px;
    }
</style>
