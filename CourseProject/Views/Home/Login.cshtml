
@{
    ViewBag.Title = "Login";
}
<h4>Please login</h4>
@using (Html.BeginForm())
{
    <div>
        <p>Login:</p>
        <input type="text" name="login" />
    </div>
    <div>
        <p>Password:</p>
        <input type="password" name="password" />
    </div>
    <p>@ViewBag.ErrorMessage</p>
    <hr />
    <div>
        <input type="submit" value="Login" class="btn btn-default" formaction="Login" formmethod="post" />
    </div>
}

