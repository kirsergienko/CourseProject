@model CourseProject.Models.Item
@using CourseProject.Resources
<div>
    @Language.Comments:
    @foreach (var comment in Model.Comments)
    {
        <div>
            @comment.UserName:
        </div>
        <div>
            @comment.Text
        </div>
        <div>
            (@comment.Commented)
        </div>
        <hr />
    }
</div>

