@model CourseProject.Models.Collection

<div>
    <h4>Collection</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Title:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Collection picture:
        </dt>

        <dd>
            @if (String.IsNullOrEmpty(Model.Image))
            {
                <img src="https://res.cloudinary.com/de7r0q8df/image/upload/v1641019399/MyImages/1_4eQuCfeAhUog26R07bA4lg_xwmhm3.png" width="150" height="100" />
            }
            else
            {
                <img src="@Model.Image" width="100" height="100" />
            }

        </dd>

        <dt>
            Description:
        </dt>

        <dd>
            @Html.Raw(Model.Description)
        </dd>

        <dt>
            Theme:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Theme)
        </dd>

        <dt>
            Items Count:
        </dt>

        <dd>
            @ViewBag.Items.Count
        </dd>
    </dl>
    @if (ViewBag.CurrentUserId == Model.UserId || ViewBag.IsAdmin)
    {
        <table class="table-condensed">
            <tr>
                <td>
                    @Html.ActionLink("Add Item", "AddItem", new { id = Model.Id })
                </td>
                <td>
                    @Html.ActionLink("Delete collection", "DeleteCollection", new { id = Model.Id })
                </td>
                <td>
                    @Html.ActionLink("Edit collection", "EditCollection", new { id = Model.Id })
                </td>
            </tr>
        </table>
    }
</div>

@Html.Action("Items", new { items = ViewBag.Items, collectionId = Model.Id })

<p>
    @Html.ActionLink("Home", "MainPage")
</p>
