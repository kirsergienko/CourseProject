@model CourseProject.Models.Collection

<div style="margin-left: 20%;">
    <h4>Collection</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Title:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Collection picture:
        </dt>

        <dd>
            @if (String.IsNullOrEmpty(Model.Image))
            {
                <img src="https://res.cloudinary.com/de7r0q8df/image/upload/v1641019399/MyImages/1_4eQuCfeAhUog26R07bA4lg_xwmhm3.png" width="150" height="100" />
            }
            else
            {
                <img src="@Model.Image" width="100" height="100" />
            }

        </dd>

        <dt>
            Description:
        </dt>

        <dd>
            @Html.Raw(Model.Description)
        </dd>

        <dt>
            Theme:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Theme)
        </dd>

        <dt>
            Items Count:
        </dt>

        <dd>
            @Model.ItemsCount
        </dd>
    </dl>
    @Html.ActionLink("Author", "ShowUser", new { id = Model.UserId })
    <hr />
    @if (ViewBag.CurrentUserId == Model.UserId || ViewBag.IsAdmin)
    {
        <table style="margin-bottom:10px">
            <tr>
                <td>
                    @Html.ActionLink("Add Item", "AddItem", new { id = Model.Id }, new { @class = "btn btn-primary" })
                </td>
                <td>
                    @Html.ActionLink("Delete collection", "DeleteCollection", new { id = Model.Id }, new { @class = "btn btn-primary" })
                </td>
                <td>
                    @Html.ActionLink("Edit collection", "EditCollection", new { id = Model.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        </table>
    }
</div>
<div style="margin-left:20%;">
    Sort:
    @Html.DropDownList("Sort", (IEnumerable<SelectListItem>)new SelectList(new List<string> { "--", "By date", "By likes", "By date descending", "By likes descending" }), new { @class = "sort" })
</div>



<div id="items">

</div>

<p>
    @Html.ActionLink("Home", "MainPage")
</p>

@section Scripts {
    <script>
        $(".sort").change(function () {
            var sort = $(".sort").val()
            var url = "/Home/SortedItems?collectionId=" + @Model.Id + "&sort=" + sort.replace(/ /g, '');;
            $("#items").load(url)
    });
    </script>
    <script>
        $(document).ready(function () {
            var url = "@(Html.Raw(Url.Action("Items","Home" ,new { collectionId = Model.Id })))";
             $("#items").load(url)
        });
    </script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
}


