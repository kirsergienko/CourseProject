@using CourseProject.Models
@model List<Collection>

@foreach (var collection in Model)
{
    <div>
        <h4>Collection "@collection.Title"</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Collection picture:
            </dt>

            <dd>
                @if (String.IsNullOrEmpty(collection.Image))
                {
                    <img src="https://res.cloudinary.com/de7r0q8df/image/upload/v1641019399/MyImages/1_4eQuCfeAhUog26R07bA4lg_xwmhm3.png" width="150" height="100" />
                }
                else
                {
                    <img src="@collection.Image" width="100" height="100" />
                }

            </dd>

            <dt>
                Description:
            </dt>

            <dd>
                @Html.Raw(collection.Description)
            </dd>

            <dt>
                Theme:
            </dt>

            <dd>
                @Html.DisplayFor(model =>collection.Theme)
            </dd>

            <dt>
                Items Count:
            </dt>

            <dd>
                @collection.ItemsCount
            </dd>
        </dl>
        @Html.ActionLink("Show", "ShowCollection", new { id = collection.Id })
    </div>
}
